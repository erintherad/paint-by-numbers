<!-- Jumbotron Header -->
	<header class="jumbotron banner bannerheader">
		<h1>The Paintdrop Gallery</h1>
		<p>Browse through the amazing gallery of paintings created by our users and share them.</p>
		<p><a class="btn btn-default btn-lg" href="/create">Or create your own!</a>
		</p>
	</header>

<div class="container-fluid">
	<hr>

	<!-- Title -->
	<div class="row">
		<div class="col-lg-12">
			<h3>Latest Paintings</h3>
		</div>
	</div>
	<!-- /.row -->

	<!-- Page Features -->
	<div class="row text-center">
		<% @paintings.each do |painting| %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= painting.url %>" alt="">
					<div class="caption">
						<hr>
						<h3><a href="<%= painting_path(painting) %>"><%= painting.title %></a></h3>
						<p>
							<a href="javascript:void(0)" class="favorite" data-id="<%= painting.id %>">
								<% if current_user.favorite_paintings.include? painting %>
								<span class="glyphicon glyphicon-star"></span>
								<% else %>
								<span class="glyphicon glyphicon-star-empty"></span>
								<% end %>
							</a>

							<span class="favorite-count"><%= painting.users.count %></span>
						</p>
						<p>By <%= painting.user.name %></p>
						<%= link_to "Share", painting_path(painting), class: "btn btn-default" %>
						<div>
						</div>
					</div>
				</div>
			</div>
		<% end %>
		<div class="text-center">
			><%= paginate @paintings %>
		</div>
	</div>
	<!-- /.row -->
</div>
